
@{
    ViewBag.Title = "EditRoles";
}

<h2>[currentUserName]</h2>

<div class="panel panel-info">
    <div class="panel-heading">
        Roles
    </div>

@using(Html.BeginForm()) { 
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
