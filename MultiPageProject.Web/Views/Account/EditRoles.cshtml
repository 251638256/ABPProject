            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Admin</td>
                <td><input type="checkbox" value="" /></td>
            </tr>
            <tr>
                <td>2</td>
                <td>User</td>
                <td><input type="checkbox" checked value="" /></td>
            </tr>
            <tr>
                <td>3</td>
                <td>Visitor</td>
                <td><input type="checkbox" value="" /></td>
            </tr>
        </tbody>
    </table>
    @Html.ActionLink("Save", "EditRoles", null,new { @class = "btn btn-warning" })
